@{
    ViewBag.Title = "Home Page";
}

@section AllPagesStyle {
<link href="@Url.Content("~/Content/AllPages.css")" rel="stylesheet" type="text/css" />
}
@section ImageWebStyle {
    <link href="@Url.Content("~/Content/ImageWeb.css")" rel="stylesheet" type="text/css" />
}

<div class="jumbotron">
    <h2>Welcome To Lifpics!</h2>
    <p class="lead">"Taking an image, freezing a moment, reveals how rich reality truly is..."</p>
    <br />
    <h4 class="lead">This website allows you to watch and controll your Photos!</h4>
    <p><a href="https://www.youtube.com/watch?v=SkgTxQm9DWM" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Image Service Status</h2>
        <p>@ViewBag.serviceStatus</p>
    </div>
    <div class="col-md-4">
        <h2>How many Pictures Do You Have?</h2>
        @if (ViewBag.howManyPhotos != -1)
        {
            <p>Currently you have @ViewBag.howManyPhotos photos.</p>
        }
        else
        {
            <p>Loading the photos amount takes a bit longer than expected. Please refresh to watch the amount.</p>
        }
    </div>
    <div class="col-md-4">
        <h2>Students Info</h2>
        <table>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Id</th>
            </tr>
            <tr>
                <td>@ViewBag.firstName1</td>
                <td>@ViewBag.lastName1</td>
                <td>@ViewBag.id1</td>
            </tr>
            <tr>
                <td>@ViewBag.firstName2</td>
                <td>@ViewBag.lastName2</td>
                <td>@ViewBag.id2</td>
            </tr>
        </table>
    </div>
</div>