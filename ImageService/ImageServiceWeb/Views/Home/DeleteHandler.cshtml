
@{
    ViewBag.Title = "DeleteHandler";
}

@section AllPagesStyle {
    <link href="@Url.Content("~/Content/AllPages.css")" rel="stylesheet" type="text/css" />
}

<div>
    <h2>Delete Handler</h2>
    <h3>Are you sure you want to delete Handler "@ViewBag.HandlerToDelete "?</h3>

    <div>
        <table>
            <tr>
                <td><input type="button" id="btnDelete" value="Delete" /></td>
                <td><input type="button" id="btnCancel" value="Cancel" class="float-left submit-button" />
            </tr>
        </table>
    </div>

</div>


<script type="text/javascript">
    document.getElementById("btnDelete").onclick = function () {
        document.getElementById("btnCancel").disabled = true;
        document.getElementById("btnDelete").disabled = true;
        location.href = "HandlerDeletor";
    };
</script>

<script type="text/javascript">
    document.getElementById("btnCancel").onclick = function () {
        document.getElementById("btnCancel").disabled = true;
        document.getElementById("btnDelete").disabled = true;
        location.href = "Config";
    };
</script>