@model IEnumerable<ImageServiceWeb.Models.Image>

@{
    ViewBag.Title = "Photos";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>
<div>

    <div class="container">
        <div class="row">           
            @foreach (var photo in Model)
            {
                <div class="col-sm-3 col-md-3">
                    <div class="thumbnail">
                        <img src="@Url.Content(photo.Path)" class="img-circle" alt="Cinque Terre">
                        <div class="caption">
                            <h3>@Html.DisplayFor(modelItem => photo.Name)</h3>
                            <p>Date: @Html.DisplayFor(modelItem => photo.Date)</p>
                            <p>
                                <a href="#" class="btn btn-primary" role="button" style="background-color:cornflowerblue; color:azure">View</a>
                                <a href="#" class="btn btn-primary" role="button"style="background-color:red; color:azure">Delete</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div> 

    </div>