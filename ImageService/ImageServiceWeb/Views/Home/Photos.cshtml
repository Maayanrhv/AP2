@model IEnumerable<ImageServiceWeb.Models.Image>

@{
    ViewBag.Title = "Photos";
}

@section AllPagesStyle {
    <link href="@Url.Content("~/Content/AllPages.css")" rel="stylesheet" type="text/css" />
}
@section PhotosStyle {
    <link href="@Url.Content("~/Content/Photos.css")" rel="stylesheet" type="text/css" />
}
<h2>@ViewBag.Title</h2>

<div>

    <div class="container">
        <div class="row">
            @foreach (var photo in Model)
            {
                <div class="col-sm-4 col-md-4">
                    <div class="thumbnail">
                        <img src="@Url.Content(photo.Path)" class="img-circle" alt="Cinque Terre">
                        <div class="caption">
                            <h3>@Html.DisplayFor(modelItem => photo.Name)</h3>
                            <p>Date: @Html.DisplayFor(modelItem => photo.Date)</p>
                            <p>
                                <a href="@Url.Action("ViewPhoto", "Home", new { srcPath = photo.SrcPath})"
                                    class="btn btn-primary" role="button" style="background-color:cornflowerblue; color:azure">View</a>
                                <a href="@Url.Action("DeletePhoto", "Home", new { srcPath = photo.SrcPath})"
                                    class="btn btn-primary" role="button" style="background-color:red; color:azure">Delete</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>